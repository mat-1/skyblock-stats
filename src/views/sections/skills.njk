<ul>
{%- for skill in data.member.skills | sort(true, true, 'value') -%}
    <li>
        <span class="tooltip" data-tooltip="{{ ((skill.levelXp/skill.levelXpRequired)*100)|round }}% to next level, {{ skill.levelXp|round|cleannumber }}/{{ skill.levelXpRequired|formatnumber(3) }} xp" tabindex="1">
            {{ skill.name|clean }} <span class="skill-level{% if skill.level == maxLevel %} skill-maxed{% endif %}">{{ skill.level }}</span>
        </span>
    </li>
{%- endfor -%}
</ul>